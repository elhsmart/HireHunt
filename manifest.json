{
  "manifest_version": 2,
  "name": "HireHunt",
  "version": "0.1",
  "minimum_chrome_version": "23",
  "icons": {

    "128": "assets/logo-128.png"
  },

  "app": {
    "background": {
      "scripts": ["js/upstart.js"]
    }
  },

  "permissions": [
      "<all_urls>",
      "webview",
      "system.display",
      "http://*/*",
      "https://*/*",
      "contextMenus",
      "unlimitedStorage",
      "storage",
      "fileSystem",
      "fileSystem.write",
      "fileSystem.directory"
    ],

  "sandbox": {
    "pages": ["index.html"]
  }
}
